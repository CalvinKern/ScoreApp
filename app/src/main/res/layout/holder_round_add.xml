<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addRoundButton"
    android:layout_width="match_parent"
    android:layout_height="@dimen/min_touch_size"
    android:background="@color/colorSecondary"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/addRoundIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addRoundLabel"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_add_black"
        android:tint="@color/colorOnSecondary"
        />

    <TextView
        android:id="@+id/addRoundLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addRoundIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="@string/addRound"
        android:textColor="@color/colorOnSecondary"
        android:textSize="@dimen/text_title"
        android:padding="8dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
